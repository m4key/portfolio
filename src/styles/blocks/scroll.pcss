.scroll{
  z-index: 25;
  display: flex;
  margin: 0 auto;
  margin-top: 254px;
  cursor: pointer;
  @include desktopHd{
    margin-top: 318px;
  }
  @include desktop{
    margin-top: 234px;
  }
  @include tablets{
    display: none;
  }
}
.scroll__button{
  width: 19px;
  height: 30px;
  background-color: transparent;
  border: 0;
  outline: 0;
  
}
.scroll__text{
  font-size: 18px;
  color:$text-color;
  font-weight: 600;
  line-height: 1.67;
}

.scroll__button-svg{
  height: 100%;
  fill:$text-color;
  transition:  fill .3s;
  transition: transform .3s;
  &:hover{
    fill:$orange;
    transform: scale(1.2);
  }
}