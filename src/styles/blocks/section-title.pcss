.section-title{
  font-size: 36px;
  font-weight: bold;
  color:$text-color;
  &--black{
    color:$black;
    @include phones{
      text-align: center;
      font-size: 24px;
    }
  }
  &--size{
    font-size: 30px;
  }
  @include tablets{
    font-size: 30px;
  }
  @include phones{
    font-size: 24px;
  }
}
